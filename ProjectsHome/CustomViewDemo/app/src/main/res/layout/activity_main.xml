<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <com.lizw.textview.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:text="Hello World!"
        app:textColor="@color/colorPrimary" />

    <com.lizw.qqstepview.QQStepView
        android:id="@+id/qqStep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:innerBorderColor="@color/colorPrimary"
        app:innerBorderWidth="10dp"
        app:mText="2021"
        app:mTextColor="#FF0000"
        app:mTextSize="60sp"
        app:outerBorderColor="@color/colorAccent"
        app:outerBorderWidth="20dp" />

    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add Step 500"
        android:textAllCaps="false" />

    <com.lizw.colortracktextview.ColorTrackTextView
        android:id="@+id/color_track_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="视频" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="leftToRight"
        android:text="左到右" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="rightToLeft"
        android:text="右到左" />

    <com.lizw.circleprogressbar.CircleProgressBar
        android:id="@+id/circle_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:innerBorderColor="@color/colorPrimary"
        app:innerBorderWidth="10dp"
        app:mText="0"
        app:mTextColor="#FF0000"
        app:mTextSize="20sp"
        app:outerBorderColor="@color/colorAccent"
        app:outerBorderWidth="20dp" />

</LinearLayout>